#include <ESP8266WiFi.h>
#include <espnow.h>

#define SENSOR_PIN 5  // GPIO5 (D1)

uint8_t receiverMAC[] = {0x24, 0x6F, 0x28, 0xAA, 0xBB, 0xCC};  // Replace with your receiver MAC address

void setup() {
  Serial.begin(115200);
  WiFi.mode(WIFI_STA);
  Serial.println("Sender ready");

  if (esp_now_init() != 0) {
    Serial.println("ESP-NOW init failed");
    return;
  }

  esp_now_set_self_role(ESP_NOW_ROLE_CONTROLLER);
  esp_now_add_peer(receiverMAC, ESP_NOW_ROLE_SLAVE, 1, NULL, 0);

  pinMode(SENSOR_PIN, INPUT);
}

void loop() {
  int sensorState = digitalRead(SENSOR_PIN);

  if (sensorState == HIGH) {
    const char *message = "WATER_FULL";
    esp_now_send(receiverMAC, (uint8_t *)message, strlen(message));
    Serial.println("Water detected - message sent");
    delay(3000);  // Prevent flooding messages
  }

  delay(500);
}
